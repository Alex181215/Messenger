<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Messenger" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Основные цвета -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#424242</item>
        <item name="colorOnPrimary">#212121</item>

        <!-- Второстепенные цвета -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Фон -->
        <item name="android:background">#F5F5F5</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="colorSurfaceVariant">#E0E0E0</item>
        <item name="colorOnSurfaceVariant">#757575</item>
        <item name="colorOutline">#BDBDBD</item>

        <!-- Бейджи -->
        <item name="badgeBgColor">#D32F2F</item>
        <item name="badgeTextColor">#FFFFFF</item>

        <!-- Статусбар и навбар -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Прозрачность и поведение -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Иконки -->
        <item name="android:windowLightStatusBar">true</item> <!-- тёмные иконки на светлом фоне -->

    </style>
</resources>
